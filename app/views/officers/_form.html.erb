<div class="col-md-12">
  <%= form_for(@officer) do |f| %>
    <div class="col-md-6 col-md-offset-3">
      <%= render partial: 'shared/errors', locals: { model: @officer } %>
    </div>
    
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= f.label :full_legal_name, "Full Legal Name" %><br>
        <%= f.text_field :full_legal_name, class: "form-control" %>
      </div>

      <div class="col-md-6 col-md-offset-3">
        <%= f.label :title, "Title / Postion" %><br>
        <%= f.text_field :title, class: "form-control"  %>
      </div>
    </div>

    <div class="row">
        <% if !@officer.new_record? %>
          <div class="col-md-3 col-md-offset-3">
            <%= link_to 'Back', corporate_applications_personnel_path,
                        class: "btn btn-primary" %>
          </div>
          <div class="col-md-3">         
        <% else %>
          <div class="col-md-6 col-md-offset-3">
        <% end %>
          <%= f.submit class: "btn btn-primary" %>
        </div>
    </div>
  <% end %>
</div>