<div class="row">
  <%= form_for(@officer) do |f| %>
    <p class="col-md-12">
      <%= render partial: 'shared/errors', locals: { model: @officer } %>
    </p>
  
    <p class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= f.label :full_legal_name %><br>
        <%= f.text_field :full_legal_name %>
      </div>
    </p>
    <p class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
    </p>

    <p class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="col-md-6">
          <% if !@officer.new_record? %>
            <%= link_to 'Back', corporate_applications_personnel_path,
                        class: "btn btn-primary" %>
          <% end %>
        </div>
        <div class="col-md-6">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>
    </p>
  <% end %>
</div>