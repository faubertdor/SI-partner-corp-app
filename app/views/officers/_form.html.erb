<div class="row">
  <div class="small-4 large-left columns">
    <%= form_for(@officer) do |f| %>
      <%= render partial: 'shared/errors', locals: { model: @officer } %>
    
      <div class="field">
        <%= f.label :full_legal_name %><br>
        <%= f.text_field :full_legal_name %>
      </div>
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
    
      <div class="actions">
        <% if !@officer.new_record? %>
          <%= link_to 'Back', corporate_applications_personnel_path,
              class: "button expand" %>
        <% end %>
        <%= f.submit class: "button expand" %>
      </div>
    <% end %>
  </div>
</div>