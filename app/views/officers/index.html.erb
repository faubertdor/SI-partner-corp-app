<h1>Listing Officers</h1>

<table>
  <thead>
    <tr>
      <th>Full legal name</th>
      <th>Title</th>
      <th>Corporate personnel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @officers.each do |officer| %>
      <tr>
        <td><%= officer.full_legal_name %></td>
        <td><%= officer.title %></td>
        <td><%= officer.corporate_personnel %></td>
        <td><%= link_to 'Show', officer %></td>
        <td><%= link_to 'Edit', edit_officer_path(officer) %></td>
        <td><%= link_to 'Destroy', officer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

