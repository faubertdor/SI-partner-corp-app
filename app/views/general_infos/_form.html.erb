<div class="col-md-12">
  <%= form_for(@general_info) do |f| %>
    <%= render partial: 'shared/errors', locals: { model: @general_info } %>

    <div class="row">
      <div class="col-md-4">
        <%= f.label :corporate_name, "Corporate Name" %><br>
        <%= f.text_field :corporate_name, class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= f.label :trade_name, "Trade Name" %><br>
        <%= f.text_field :trade_name, class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= f.label :country_of_inc, "Country of Incorporation" %><br>
        <%= f.text_field :country_of_inc, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <%= f.label :state_of_inc, "State of Incorporation" %><br>
        <%= f.text_field :state_of_inc, class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= f.label :tax_id, "US Tax ID" %><br>
        <%= f.text_field :tax_id, class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= f.label :nature_of_business, "Nature of Business" %><br>
        <%= f.text_field :nature_of_business, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <%= f.label :street_address, "Street Address (Not PO Box)" %><br>
        <%= f.text_field :street_address, class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= f.label :city, "City / Town" %><br>
        <%= f.text_field :city, class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= f.label :state, "State / Province" %><br>
        <%= f.text_field :state, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <%= f.label :zip_code, "Zip Code" %><br>
        <%= f.text_field :zip_code, class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= f.label :country %><br>
        <%= f.text_field :country, class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= f.label :landline_number, "Office Phone / Landline Number (Including Area Code)" %><br>
        <%= f.text_field :landline_number, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <%= f.label :cell_number, "Cell Number (Including Area Code)" %><br>
        <%= f.text_field :cell_number, class: "form-control" %>
      </div>

      <div class="col-md-4">
        <%= f.label :email, "Email Address (For Deal Confirmations)" %><br>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= f.label :website %><br>
        <%= f.text_field :website, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <% if !@general_info.new_record? %>
          <%= link_to 'Back', @general_info, class: "btn btn-primary" %>
        <% end %>
      </div>
      <div class="col-md-6">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
  