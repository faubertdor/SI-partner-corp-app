<div class="row">
  <div class="small-4 large-left columns">
    <%= form_for(@authorized_representative) do |f| %>
      <%= render partial: 'shared/errors',
                 locals: { model: @authorized_representative } %>
      <div class="field">
        <%= f.label :full_legal_name %><br>
        <%= f.text_field :full_legal_name %>
      </div>
      <div class="field">
        <%= f.label :occupation %><br>
        <%= f.text_field :occupation %>
      </div>
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :date_of_birth %><br>
        <%= f.date_select :dob %>
      </div>
      <div class="field">
        <%= f.label :street_address %><br>
        <%= f.text_field :street_address %>
      </div>
      <div class="field">
        <%= f.label :city %><br>
        <%= f.text_field :city %>
      </div>
      <div class="field">
        <%= f.label :state %><br>
        <%= f.text_field :state %>
      </div>
      <div class="field">
        <%= f.label :country %><br>
        <%= f.text_field :country %>
      </div>
      <div class="field">
        <%= f.label :zip_code %><br>
        <%= f.text_field :zip_code %>
      </div>
      <div class="actions">
        <% if !@authorized_representative.new_record? %>
          <%= link_to 'Back', corporate_applications_personnel_path,
              class: "button expand" %>
        <% end %>
        <%= f.submit class: "button expand" %>
      </div>
    <% end %>
  </div>
</div>