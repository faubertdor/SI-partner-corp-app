<div class="col-md-12">
  <%= form_for(@authorized_representative) do |f| %>
    <%= render partial: 'shared/errors', locals: { model: @authorized_representative } %>

  <div class="row">
    <div class="col-md-4">
      <%= f.label :full_legal_name, "Full Legal Name" %><br>
      <%= f.text_field :full_legal_name, class: "form-control" %>
    </div>
    <div class="col-md-4">
      <%= f.label :email %><br>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <div class="col-md-4">
      <%= f.label :title, "Title / Position" %><br>
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
        <%= f.label :dob, "Date of Birth" %><br/>
        <%= f.date_select :dob, class: "form-control" %>
    </div>
    <div class="col-md-4">
        <%= f.label :street_address, "Street Address" %>
        <%= f.text_field :street_address, class: "form-control" %>
    </div>
    <div class="col-md-4">
        <%= f.label :city %>
        <%= f.text_field :city, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
        <%= f.label :state %><br>
        <%= f.text_field :state, class: "form-control" %>
    </div>
    <div class="col-md-4">
        <%= f.label :country %><br>
        <%= f.text_field :country, class: "form-control" %>
    </div>
    <div class="col-md-4">
        <%= f.label :zip_code, "Zip Code" %><br>
        <%= f.text_field :zip_code, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <% if !@authorized_representative.new_record? %>
          <%= link_to 'Back', corporate_applications_personnel_path,
                      class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="col-md-6">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
</div>
 