<div class="row">
  <%= form_for(@authorized_representative) do |f| %>
  <p class="col-md-12">
    <%= render partial: 'shared/errors', locals: { model: @authorized_representative } %>
  </p>

  <p class="row">
    <div class="col-md-4">
      <%= f.label :full_legal_name %><br>
      <%= f.text_field :full_legal_name %>
    </div>
    <div class="col-md-4">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>
    <div class="col-md-4">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
  </p>

  <p class="row">
    <div class="col-md-4">
        <%= f.label :date_of_birth %>
        <%= f.date_select :dob %>
    </div>
    <div class="col-md-4">
        <%= f.label :street_address %>
        <%= f.text_field :street_address %>
    </div>
    <div class="col-md-4">
        <%= f.label :city %>
        <%= f.text_field :city %>
    </div>
  </p>

  <p class="row">
    <div class="col-md-4">
        <%= f.label :state %><br>
        <%= f.text_field :state %>
    </div>
    <div class="col-md-4">
        <%= f.label :country %><br>
        <%= f.text_field :country %>
    </div>
    <div class="col-md-4">
        <%= f.label :zip_code %><br>
        <%= f.text_field :zip_code %>
    </div>
  </p>

  <p class="row">
    <div class="col-md-6">
      <% if !@authorized_representative.new_record? %>
          <%= link_to 'Back', corporate_applications_personnel_path,
                      class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="col-md-6">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </p>
<% end %>
</div>
 