<h1>Listing Directors</h1>

<table>
  <thead>
    <tr>
      <th>Full legal name</th>
      <th>Occupation</th>
      <th>Corporate personnel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @directors.each do |director| %>
      <tr>
        <td><%= director.full_legal_name %></td>
        <td><%= director.occupation %></td>
        <td><%= director.corporate_personnel %></td>
        <td><%= link_to 'Show', director %></td>
        <td><%= link_to 'Edit', edit_director_path(director) %></td>
        <td><%= link_to 'Destroy', director, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

